<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"

    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:left_margin="200vp"
        ohos:orientation="horizontal"
        ohos:right_margin="200vp"
        ohos:top_margin="40vp">

        <TextField
            ohos:id="$+id:text"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$graphic:background_ability_main"
            ohos:hint="请输入要查找的单词"
            ohos:layout_alignment="center"
            ohos:text_size="30vp"
            ohos:weight="1"
            >
        </TextField>

        <Image
            ohos:id="$+id:btnSearch"
            ohos:height="match_parent"
            ohos:width="100vp"
            ohos:image_src="$media:1.jpg">
        </Image>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:left_margin="200vp"
        ohos:orientation="horizontal"
        ohos:right_margin="200vp"
        ohos:top_margin="40vp">

        <Image
            ohos:id="$+id:image"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:image_src="$media:2.jpg"
            ohos:top_margin="20vp"
            >
        </Image>

        <Text
            ohos:id="$+id:textResult"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="hello word"
            ohos:multiple_lines="true"
            ohos:text_alignment="left"
            ohos:text_size="50vp"
            ohos:visibility="hide"
            >
        </Text>

    </DirectionalLayout>

</DirectionalLayout>